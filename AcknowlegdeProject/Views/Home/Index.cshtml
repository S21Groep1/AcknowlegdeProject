<!-- Link to the CSS file for this view-->
@section Styles {
    <link href="@Url.Content("~/Styles/HomeIndexStyle.css")" rel="stylesheet" type="text/css" />
}

<!-- All the html content that must be the body -->
<div class="container">
    <div class="row" id="pwd-container">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <section class="login-form">
                <form asp-controller="Home" asp-action="Home" method="post" role="login">
                    <img src="~/images/header-logo.png" class="img-responsive" alt="" />
                    <input type="email" name="email" placeholder="Email" required class="form-control input-lg" />
                    <input type="password" class="form-control input-lg" id="password" placeholder="Password" required="" />
                    <div class="pwstrength_viewport_progress"></div>
                    <button type="submit" name="go" class="btn btn-lg btn-success btn-block" onclick="location.href='@Url.Action("Homepage","Home")'">Sign in</button>
                    <div>
                        <p class="createLabel"><a href="@Url.Action("Reset", "Home")">Reset password</a></p>
                    </div>
                </form>

            </section>

        </div>
        <div class="col-md-4"></div>
    </div>
</div>