@section Styles {
    <link href="@Url.Content("~/Styles/ResetStyle.css")" rel="stylesheet" type="text/css" />
}

<div class="container">
    <div class="row" id="pwd-container">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <section class="login-form">
                <form method="post" action="#" role="login">
                    <img src="header-logo.png" class="img-responsive" alt="" />
                    <div>
                        <p class="resetLabel"> Fill in your email adress and we will send you and email to reset your password!</p>
                    </div>
                    <input type="email" name="email" placeholder="Email" required class="form-control input-lg" />
                    <div class="pwstrength_viewport_progress"></div>
                    <button type="submit" name="go" class="btn btn-lg btn-success btn-block">Send</button>
                    <div>
                        <p class="createLabel"><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-arrow-left"></span></a></p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>